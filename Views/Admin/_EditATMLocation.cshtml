@model EditATMLoc

<form asp-action="EditATMLocation" method="post">
	<div class="block block-themed block-transparent mb-0">
		<div class="block-header bg-gd-sea">
			<h3 class="block-title">EDIT ATM Location</h3>
			<div class="block-options">
				<button type="button" class="btn-block-option" data-dismiss="modal" aria-label="Close">
					<i class="si si-close"></i>
				</button>
			</div>
		</div>
		<input type="hidden" asp-for="ID" class="form-control">
		<input type="hidden" asp-for="ATM_LOC_ID" class="form-control">
		<div class="block-content">
			<div class="row justify-content-center py-20">
				<div class="col-xl-8">
					<div class="form-group row">
						<label class="col-lg-4 col-form-label" asp-for="ATM_ID">ATM Branch<span class="text-danger">*</span></label>
						<div class="col-lg-8">
							<select class="js-select2 form-control" asp-for="ATM_ID" asp-items="ViewBag.cmbATMUsed2 " style="width: 100%;" >
								<option></option>
							</select>
							<span class="field-validation-valid text-danger" asp-validation-for="ATM_ID"></span>
						</div>
					</div>

					<div class="form-group row">
						<label class="col-lg-4 col-form-label" asp-for="ATM_LOCATION">ATM Location<span class="text-danger">*</span></label>
						<div class="col-lg-8">
							<input type="text" class="form-control" asp-for="ATM_LOCATION" placeholder="Enter ATM Location" autocomplete="off">
							<span class="field-validation-valid text-danger" asp-validation-for="ATM_LOCATION"></span>
						</div>
					</div>


				</div>
			</div>

		</div>

	</div>

    <div class="modal-footer">
        <button type="button" class="btn btn-alt-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-alt-primary"><i class="fa fa-check"></i> Update</button>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
	$(document).ready(function () {

		$('#ATM_ID').select2({
			static: true,
			disabled: 'readonly' 
		});

	});

</script>